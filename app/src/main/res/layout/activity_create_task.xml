<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateTask"
    tools:layout_editor_absoluteY="25dp">

  <EditText
      android:id="@+id/task_descri"
      android:layout_width="314dp"
      android:layout_height="91dp"
      android:layout_alignParentLeft="true"
      android:layout_alignParentTop="true"
      android:layout_marginTop="132dp"
      android:gravity="top"
      android:text="@string/task_descri"
      android:textAppearance="@style/task_descri"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.515"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:id="@+id/currentPriority"
      android:layout_width="30dp"
      android:layout_height="30dp"
      android:layout_marginStart="48dp"
      android:layout_marginBottom="392dp"
      android:background="@drawable/bg_layer3"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent" />

  <TextView
      android:id="@+id/taskPriorityNotImpt"
      android:layout_width="30dp"
      android:layout_height="30dp"
      android:layout_marginStart="12dp"
      android:layout_marginBottom="392dp"
      android:background="@drawable/bg_notimpt"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toEndOf="@+id/currentPriority" />

  <TextView
      android:id="@+id/taskPriorityImpt"
      android:layout_width="30dp"
      android:layout_height="30dp"
      android:layout_marginStart="12dp"
      android:layout_marginBottom="392dp"
      android:background="@drawable/bg_impt"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toEndOf="@+id/taskPriorityNotImpt" />

  <TextView
      android:id="@+id/taskPriorityVeryImpt"
      android:layout_width="30dp"
      android:layout_height="30dp"
      android:layout_marginStart="12dp"
      android:layout_marginBottom="392dp"
      android:background="@drawable/bg_veryimpt"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toEndOf="@+id/taskPriorityImpt" />

  <View
      android:id="@+id/rectangle_7"
      android:layout_width="108dp"
      android:layout_height="18dp"
      android:layout_alignParentLeft="true"
      android:layout_alignParentTop="true"
      android:layout_marginEnd="56dp"
      android:layout_marginBottom="16dp"
      android:background="@drawable/changereminderbox"
      android:elevation="4dp"
      app:layout_constraintBottom_toTopOf="@+id/rectangle_5"
      app:layout_constraintEnd_toEndOf="parent" />

  <TextView
      android:id="@+id/change_remi"
      android:layout_width="105dp"
      android:layout_height="15dp"
      android:layout_alignParentLeft="true"
      android:layout_alignParentTop="true"
      android:layout_marginEnd="56dp"
      android:layout_marginBottom="19dp"
      android:gravity="center_horizontal|center_vertical"
      android:text="Change Reminder"
      android:textAppearance="@style/change_remi"
      app:layout_constraintBottom_toTopOf="@+id/rectangle_5"
      app:layout_constraintEnd_toEndOf="parent" />

  <View
      android:id="@+id/rectangle_5"
      android:layout_width="311dp"
      android:layout_height="140dp"
      android:layout_alignParentLeft="true"
      android:layout_alignParentTop="true"
      android:layout_marginBottom="8dp"
      android:background="@drawable/greenrectangle"
      android:gravity="bottom"
      app:layout_constraintBottom_toTopOf="@+id/rectangle_6"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent" />

  <EditText
      android:id="@+id/note_desc"
      android:layout_width="290dp"
      android:layout_height="90dp"
      android:layout_alignParentLeft="true"
      android:layout_alignParentTop="true"
      android:layout_marginBottom="16dp"
      android:gravity="top"
      android:text="@string/note_desc"
      android:textAppearance="@style/note_desc"

      app:layout_constraintBottom_toBottomOf="@+id/rectangle_5"
      app:layout_constraintEnd_toEndOf="@+id/rectangle_5"
      app:layout_constraintHorizontal_bias="0.428"
      app:layout_constraintStart_toStartOf="@+id/rectangle_5" />

  <View
      android:id="@+id/rectangle_6"
      android:layout_width="311dp"
      android:layout_height="82dp"
      android:layout_alignParentLeft="true"
      android:layout_alignParentTop="true"
      android:layout_marginBottom="136dp"
      android:background="@drawable/greenrectangle"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent" />

  <TextView
      android:id="@+id/textView7"
      android:layout_width="70dp"
      android:layout_height="20dp"
      android:layout_alignParentLeft="true"
      android:layout_alignParentTop="true"
      android:layout_marginStart="12dp"
      android:layout_marginTop="4dp"
      android:gravity="top"
      android:text="@string/note_title"
      android:textAppearance="@style/note_title"
      app:layout_constraintStart_toStartOf="@+id/rectangle_6"
      app:layout_constraintTop_toTopOf="@+id/rectangle_6" />
  <!-- Note desc -->

  <EditText
      android:id="@+id/editText2"
      android:layout_width="290dp"
      android:layout_height="40dp"
      android:layout_alignParentLeft="true"
      android:layout_alignParentTop="true"
      android:layout_marginStart="12dp"
      android:layout_marginBottom="16dp"
      android:gravity="top"
      android:text="@string/note_desc"
      android:textAppearance="@style/note_desc"
      app:layout_constraintBottom_toBottomOf="@+id/rectangle_6"
      app:layout_constraintStart_toStartOf="@+id/rectangle_6" />

  <TextView
      android:id="@+id/note_title"
      android:layout_width="70dp"
      android:layout_height="20dp"
      android:layout_alignParentLeft="true"
      android:layout_alignParentTop="true"
      android:layout_marginTop="12dp"
      android:layout_marginEnd="232dp"
      android:gravity="top"
      android:text="@string/note_title"
      android:textAppearance="@style/note_title"
      app:layout_constraintEnd_toEndOf="@+id/rectangle_5"
      app:layout_constraintTop_toTopOf="@+id/rectangle_5" />

</androidx.constraintlayout.widget.ConstraintLayout>