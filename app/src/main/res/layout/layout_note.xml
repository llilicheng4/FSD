<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rectangle_6"
    android:layout_width="311dp"
    android:layout_height="82dp"
    android:layout_marginStart="25dp"
    android:layout_marginLeft="25dp"
    android:layout_marginTop="122dp"
    android:background="@drawable/greenrectangle">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="70dp"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:gravity="top"
        android:text="@string/note_title"
        android:textAppearance="@style/note_title"
        app:layout_constraintStart_toStartOf="@+id/rectangle_6"
        app:layout_constraintTop_toTopOf="@+id/rectangle_6" />
    <!-- Note desc -->

    <EditText
        android:id="@+id/editText2"
        android:layout_width="290dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="16dp"
        android:gravity="top"
        android:text="@string/note_desc"
        android:textAppearance="@style/note_desc"
        app:layout_constraintBottom_toBottomOf="@+id/rectangle_6"
        app:layout_constraintStart_toStartOf="@+id/rectangle_6" />
</androidx.constraintlayout.widget.ConstraintLayout>